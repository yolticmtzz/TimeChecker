<Window x:Class="TimeCheckerWPF5._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimeCheckerWPF5._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DataGrid x:Name="TodoItemGrid" AutoGenerateColumns="False" Margin="20">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding ID}"
                                    Header="TodoItem Id" Width="SizeToHeader" IsReadOnly="True"/>
            <DataGridTextColumn Binding="{Binding Type}" Header="Title"
                                    Width="200"/>
            <DataGridTextColumn Binding="{Binding DateTime}" Header="Description"
                                    Width="*"/>
            <DataGridTextColumn Binding="{Binding Comment}" Header="Completed"
                                    Width="SizeToHeader"/>
            <DataGridTextColumn Binding="{Binding User}" Header="Completed"
                                    Width="SizeToHeader"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
