@{
}


<form asp-action ="CreateEdit">
    <button type="submit" class="btn btn-primary"> + Create Employee  </button>
</form>

<hr />


<table class="table table-dark table-striped table-hover">
    <thead>
        <tr>
            <th>ID</th>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Bearbeiten</th>
            <th>Löschen</th>
        </tr>
    </thead>

    <tbody>
        @{ 
            foreach(Employee employee in ViewBag.Employees)
            {
                <tr>
                    <td>
                        @employee.Id
                    </td>
                    <td>
                        @employee.Prename
                    </td>
                    <td>
                        @employee.Lastname
                    </td>
                    <td>
                        <form asp-action="CreateEdit" asp-route-id="@employee.Id">
                            <button type="submit" class="btn btn-warning">Bearbeiten</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="DeleteEmployee" asp-route-id="@employee.Id">
                            <button type="submit" class="btn btn-danger">Löschen</button>
                        </form>
                    </td>
                </tr>

            }
        
        }

    </tbody>

</table>
    

